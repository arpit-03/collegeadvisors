              <li><span class="fa-li"><i class="fas fa-check"></i></span> <%= f.text_field :line1 %></li>
              <li><span class="fa-li"><i class="fas fa-check"></i></span> <%= f.text_field :line2 %></li>
              <li><span class="fa-li"><i class="fas fa-check"></i></span> <%= f.text_field :line3 %></li>
              <li><span class="fa-li"><i class="fas fa-check"></i></span> <%= f.text_field :line4 %></li>
            
            </ul>
         
             <%= f.submit class:"btn btn-block btn-primary text-uppercase" %>
          <%end%>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<%=form_tag createslots_path ,method: 'post' do %>
<label for="exampleInputEmail2">Create a new slot for <%=session[:admin_username]%></label>
 <div class="form-group">
                <div class='input-group date'>
               <%=text_field_tag :slotime,"",class:'form-control',id:'datetimepicker',type:"text"%>
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>
            </div>
  <%=submit_tag "Create Slot", class: 'btn btn-info'%>
<%end%>
<table id="myTable" class="table table-striped table-bordered">
  
   <thead>
        <tr>
           
            <th>Admin Id</th>
            <th>Slot Time</th>
            <th>User Id</th>
            <th>User Name</th>
       
        </tr>
    </thead>
    <tbody>
      <%@adminslot.each do |f|%>
      <tr>
        
            <td><%=f.admin_id%></td>
            <td><a href="<%=adminslotview_path(f.id)%>"><%=f.slot.to_s[0...f.slot.to_s.length-3]%></a></td>
            <td><%=f.booked%></td>
            <td><%=f.user_id%></td>
          
        </tr>
        <%end%>
    </tbody>
</table>
</div>
 <script type="text/javascript">
  $(document).ready(function(){
         jQuery('#datetimepicker').datetimepicker({
           minDate:'0'
         });
    $('#myTable').DataTable();
$('#datetimepicker').attr('autocomplete','off');
         });
        </script>

