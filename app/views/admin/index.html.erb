              <li><span class="fa-li"><i class="fas fa-check"></i></span> <%= f.text_field :line2 %></li>
              <li><span class="fa-li"><i class="fas fa-check"></i></span> <%= f.text_field :line3 %></li>
              <li><span class="fa-li"><i class="fas fa-check"></i></span> <%= f.text_field :line4 %></li>
            
            </ul>
         
             <%= f.submit class:"btn btn-block btn-primary text-uppercase" %>
          <%end%>
          </div>
        </div>
      </div>
      <!-- Pro Tier -->
      <div class="col-lg-4">
        <div class="card">
          <div class="card-body">
          <%= form_for @c3,url: updatec3_path ,method: 'post' do |f| %>
            
            <h5 class="card-title text-muted text-uppercase text-center"> <%= f.text_field :typeplan %></h5>
