<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/datatables/1.10.21/css/dataTables.bootstrap4.min.css">
 
<div class="space-header"></div>
<div style="padding: 50px">
<%=form_tag createslots_path ,method: 'post' do %>
<label for="exampleInputEmail2">Create a new slot for <%=session[:admin_username]%></label>
 <div class="form-group">
                <div class='input-group date'>
               <%=text_field_tag :slotime,"",class:'form-control',id:'datetimepicker',type:"text"%>
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>
            </div>
  <%=submit_tag "Create Slot", class: 'btn btn-info'%>
<%end%>
<br>
<table id="myTable" class="table table-striped table-bordered">
  
   <thead>
        <tr>
           <th>Slot id</th>
            <th>Admin Id</th>
            <th>Slot Time</th>
            <th>Booked</th>
            <th>User Id</th>
       
        </tr>
    </thead>
    <tbody>
      <%@adminslot.each do |f|%>
      <tr>
        <td><%=f.id%></td>
            <td><%=f.admin_id%></td>
            <td><a href="<%=adminslotview_path(f.id)%>"><%=f.slot.to_s[0...f.slot.to_s.length-3]%></a></td>
            <td><%=f.booked%></td>
            <td><%=f.user_id%></td>
          
        </tr>
        <%end%>
    </tbody>
</table>
</div>

 <script type="text/javascript">
$(document).on('turbolinks:load',function(){
         jQuery('#datetimepicker').datetimepicker({
           minDate:'0'
         });
    $('#myTable').DataTable();
$('#datetimepicker').attr('autocomplete','off');
         });
        </script>

      